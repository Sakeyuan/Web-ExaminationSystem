<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sake.examination_system.mapper.TeacherMapper">

    <insert id="addTeacher" parameterType="com.sake.examination_system.entity.Teacher">
        <!-- 插入学生信息，使用插入用户信息得到的 userId 作为外键 -->
        INSERT INTO teacher (teacher_number, user_id)
        VALUES (#{teacherNumber}, #{userId})
    </insert>

    <select id="getTeacherIdByPhone" resultType="int" parameterType="java.lang.String">
        SELECT teacher_id
        from teacher
        WHERE user_id = (SELECT user_id FROM user WHERE user_phone = #{userPhone})
    </select>

    <select id="getTeacherByUserId" resultType="com.sake.examination_system.entity.Teacher">
        SELECT *
        from teacher
        WHERE user_id = #{userId}
    </select>

    <select id="getTeacherIdByUserId" resultType="java.lang.Integer">
        SELECT teacher_id FROM teacher WHERE user_id = #{userId}
    </select>

    <!-- 定义 ResultMap，映射学生信息及用户信息 -->
    <resultMap id="teacherWithUserResultMap" type="com.sake.examination_system.entity.Teacher">
        <id property="teacherId" column="teacher_id" />
        <result property="teacherNumber" column="teacher_number" />
        <!-- 关联查询用户信息 -->
        <association property="user" javaType="com.sake.examination_system.entity.User">
            <id property="userId" column="user_id" />
            <result property="userName" column="user_name" />
            <result property="userPassword" column="user_password"/>
            <result property="userRealName" column="user_realName"/>
            <result property="userRole" column="user_role"/>
            <result property="userAvatarId" column="user_avatar_id"/>
            <result property="userGender" column="user_gender"/>
            <result property="userEmail" column="user_email"/>
            <result property="userPhone" column="user_phone"/>
        </association>
    </resultMap>
</mapper>